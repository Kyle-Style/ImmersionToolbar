<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivContactUs"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:background="#FFC29D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivUserHelper"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="#FFC29D"
        app:layout_constraintCircle="@id/ivContactUs"
        app:layout_constraintCircleAngle="189"
        app:layout_constraintCircleRadius="100dp" />

    <!--  客服  -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivContactCustomerServiceStaff"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="#FFC29D"
        app:layout_constraintCircle="@id/ivContactUs"
        app:layout_constraintCircleAngle="248"
        app:layout_constraintCircleRadius="100dp" />

    <!--  意见反馈  -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFeedBack"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="#FFC29D"
        app:layout_constraintCircle="@id/ivContactUs"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>